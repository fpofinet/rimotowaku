{% extends 'base.html.twig' %}

{% block title %}Ressources{% endblock %}

{% block body %}


<div class="row">
    <div class="container mt-5">
         
        <div class="container col-8 mt-5 rounded shadow p-lg-5 p-md-5 p-sm-5">
        <h4 class="ml-5 my-3"> Ajouter un nouveau fichier </h4>
            <div class="card p-3">
            {{form_start(formres)}}

            {#{form_widget(formres)}#}
            {{form_row(formres.nomRessource)}}
            {{form_row(formres.chemin)}}
            <button class="btn btn-primary"> 
                {% if editState %}
                    Modifier
                {% else %}
                    Enregistrer 
                </button>
                {% endif %}
            {{form_end(formres)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}
