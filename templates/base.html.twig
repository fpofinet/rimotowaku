<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}RIMOTOWAKU{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/flatly.css') }}" >
            <link rel="stylesheet" href="{{ asset('css/side.css') }}" >
            <link rel="stylesheet" href="{{ asset('css/discussion.css') }}" >
            {{  encore_entry_link_tags('app')  }}
        {% endblock %}
    </head>
    <body height="100%" width="100%">  
    <div class="row">
      <div class="container col-lg-2 col-md-2 col-sm-3 col-12 m-0" height="1000px">
        <div class="sidebar bg-primary">
          <a class="" href="{{path ('home')}}"> RIMOTOWAKU </a>
          <a href="{{path ('admin')}}"> Collaborateurs </a>
          <a href="{{path ('fichier')}}"> Fichiers </a>
          
          <a class="" href="{{ path('app_logout') }}">Deconnexion</a>
              {% if app.user %}
                <a class="" href={{ path("show_user", {'id':app.user.id})  }}>
                  <div class="">
                      {{ app.user.nom }}
                  </div> </a>
              {% endif %}
          </a>
        </div>
      </div>
      <div class="container col-lg-10 col-md-10 col-sm-9 col-12 m-0">
        {% block body %}{% endblock %}
      </div>
      
    </div>
  <!-- js placed at the end of the document so the pages load faster -->
    
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
