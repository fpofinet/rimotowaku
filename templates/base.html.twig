<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}RIMOTOWAKU{% endblock %}</title>
        {% block stylesheets %}
           <link rel="stylesheet" href="{{ asset('css/flatly.css') }}" >
            <link rel="stylesheet" href="{{ asset('css/side.css') }}" >
            {{  encore_entry_link_tags('app')  }}
        {% endblock %}
    </head>
    <body>  
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          
        </ul>
      </div>
    </nav>

  <div class="row">
    <div class="container col-lg-2 col-md-2 col-sm-3 col-12 m-0" style="color:white">
      <div class="sidebar bg-primary">
        <a class="" href="{{path ('home')}}"> RIMOTOWAKU </a>
        <a href="{{path ('admin')}}"> Collaborateurs </a>
        <a href="{{path ('fichier')}}"> Fichiers </a>
        <a class="" href="{{path ('add_user')}}">Nouvel Utilisateur</a>
        <a class="" href="{{ path('app_logout') }}">Deconnexion</a>
        <a class="" href={{ path("show_user", {'id':app.user.id})  }}>
            {% if app.user %}
                <div class="">
                    {{ app.user.nom }}
                </div>
            {% endif %}</a>
        </a>
      </div>
    </div>
    <div class="container col-lg-10 col-md-10 col-sm-9 col-12 m-0">
      {% block body %}{% endblock %}
    </div>
    
  </div>
  <!-- js placed at the end of the document so the pages load faster -->
    
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
